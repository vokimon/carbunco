#:import toast kivymd.toast.toast
#:import MapView kivy_garden.mapview

MDScreen:
    AnchorLayout:
        anchor_y: 'top'
        MDBoxLayout:
            id: "carbunco"
            pos_hint: {'top': 1.0}
            orientation: "vertical"

            MDTopAppBar:
                type: "top"
                title: "Carbunco"
                right_action_items: [ [ 'refresh' ]]
            

            MDTabs:
                align: "center"
                Tab:
                    title: "Cerca"

                    MDBoxLayout:
                        orientation: "vertical"
                        padding: 10
                        MDTextField:
                            id: address
                            hint_text: "Address"

                        MDDropDownItem:
                            id: product_selector
                            size_hint: [1.0, None]
                            text: "Gasoleo A"
                            dropdown_bg: [1, 1, 1, 1]
                            on_release: app.open_product_dropdown()

                        MDRaisedButton:
                            id: searchbutton
                            pos_hint: {'center_x': 0.5}
                            text: "Search"
                            on_press: app.search_stations()

                        MDScrollView:
                            MDList:
                                id: stationlist
                                ThreeLineAvatarIconListItem:
                                    text: "Three-line item"
                                    secondary_text: "This is a multi-line label where you can"
                                    tertiary_text: "fit more text than usual"
                                    IconRightWidget:
                                        icon: "plus"
                Tab:
                    title: "Mapa"
                    MapView:
                        zoom: 11
                        lat: 50.6394
                        lon: 3.057




